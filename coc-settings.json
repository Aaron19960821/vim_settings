{
  "languageserver": {
    "ccls": {
      "command": "/path/to/your/ccls/binary",
      "args": ["--log-file=/tmp/cq.log"],
      "filetypes": ["c", "cpp", "cc", "h", "hpp"],
      "rootPatterns": ["compile_commands.json", ".vim", ".git"],
      "initializationOptions": {
        "cacheDirectory": "/tmp/cquery"
      }
    }
  }
}
